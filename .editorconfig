root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 110
quote_type = single
insert_final_newline = true

[*.js]
indent_size = 2
line_comment = //
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.{json,yaml,yml,css,scss,html,md}]
indent_size = 2

[Makefile]
indent_style = tab
tab_width = 2
